# Copy this file to .env and update with your actual paths and settings

# Required: Tell dbt-mcp about your local project and dbt executable
DBT_PROJECT_DIR=/path/to/your/dbt/project
DBT_PATH=/path/to/your/dbt/executable

# Optional: Disable specific features
DISABLE_CLI=true              # Disable CLI
DISABLE_SQL=true              # Disable all SQL tools
DISABLE_SEMANTIC_LAYER=true   # Disable semantic layer (avoid cloud auth)
DISABLE_ADMIN_API=true        # Disable admin API (avoid cloud auth)
DISABLE_DISCOVERY=true        # Disable Discovery API (cloud discovery interface)
